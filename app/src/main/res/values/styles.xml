<resources>

    <style name="style_drawer_arrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="style_toolbar" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="style_title" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="style_title_inverse" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="style_spot" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_text_secondry</item>
    </style>

    <style name="style_spot_inverse" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_divider</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>