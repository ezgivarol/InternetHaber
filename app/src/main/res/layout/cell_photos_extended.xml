<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleColor="@android:color/white"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleInAdapter="true"
    app:mrl_rippleRoundedCorners="2dp"
    app:mrl_rippleHover="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <com.nomad.internethaber.view.RectangularedImageView
            android:id="@+id/cell_photos_thumbnail_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_dots"/>

        <com.nomad.internethaber.view.LibertineTextView
            android:id="@+id/cell_photos_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/drawable_shadow_bottom"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="@style/style_title_inverse" />
    </FrameLayout>
</com.balysv.materialripple.MaterialRippleLayout>
