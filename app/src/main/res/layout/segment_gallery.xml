<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/navigation_drawer_divider_height"
    android:layout_marginBottom="@dimen/navigation_drawer_divider_height">

    <TextView
        android:id="@+id/segment_gallery_picture_gallery_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:alpha="0.87"
        android:gravity="center_vertical"
        android:background="@drawable/selector_cell_drawer"
        android:text="Picture Gallery"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_drawer_divider_height"
        android:background="@null"/>

    <TextView
        android:id="@+id/segment_gallery_video_gallery_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:alpha="0.87"
        android:gravity="center_vertical"
        android:background="@drawable/selector_cell_drawer"
        android:text="Video Gallery"
        android:textColor="#000000"/>

</merge>